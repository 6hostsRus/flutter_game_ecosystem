{
     "$schema": "http://json-schema.org/draft-06/schema#",
     "title": "Economy Schema",
     "type": "object",
     "properties": {
          "currencies": { "type": "array", "items": { "type": "string" } },
          "offers": {
               "type": "array",
               "items": {
                    "type": "object",
                    "required": ["sku", "cost", "contents"],
                    "properties": {
                         "sku": { "type": "string" },
                         "cost": { "type": "object" },
                         "contents": { "type": "array" }
                    }
               }
          }
     },
     "required": ["currencies", "offers"]
}
