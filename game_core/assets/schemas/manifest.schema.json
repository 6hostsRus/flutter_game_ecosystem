{
     "$schema": "http://json-schema.org/draft-07/schema#",
     "title": "Content Pack Manifest",
     "type": "object",
     "required": [
          "packId",
          "version",
          "minApp",
          "assets",
          "provides",
          "integrity"
     ],
     "properties": {
          "packId": { "type": "string" },
          "version": { "type": "string" },
          "minApp": { "type": "string" },
          "assets": { "type": "array", "items": { "type": "string" } },
          "provides": {
               "type": "object",
               "properties": {
                    "economy": { "type": "string" },
                    "quests": { "type": "string" },
                    "scenes": { "type": "string" }
               },
               "additionalProperties": true
          },
          "integrity": {
               "type": "object",
               "properties": {
                    "algo": { "type": "string" },
                    "hash": { "type": "string" }
               },
               "required": ["algo", "hash"]
          }
     }
}
