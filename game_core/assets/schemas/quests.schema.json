{
     "$schema": "http://json-schema.org/draft-07/schema#",
     "title": "Quests Schema",
     "type": "array",
     "items": {
          "type": "object",
          "required": ["id", "type", "reward", "conditions"],
          "properties": {
               "id": { "type": "string" },
               "type": { "type": "string" },
               "reward": { "type": "object" },
               "conditions": {
                    "type": "array",
                    "items": {
                         "type": "object",
                         "required": ["event", "times"],
                         "properties": {
                              "event": { "type": "string" },
                              "times": { "type": "integer" }
                         }
                    }
               }
          }
     }
}
