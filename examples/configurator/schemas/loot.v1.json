{
     "$schema": "http://json-schema.org/draft-07/schema#",
     "title": "loot.v1",
     "type": "object",
     "required": ["schema", "sources", "weights"],
     "properties": {
          "schema": {
               "const": "loot.v1"
          },
          "sources": {
               "type": "array",
               "minItems": 1,
               "items": {
                    "type": "object",
                    "required": ["file", "key"],
                    "properties": {
                         "file": {
                              "type": "string"
                         },
                         "key": {
                              "type": "string"
                         }
                    }
               }
          },
          "weights": {
               "type": "object",
               "minProperties": 1,
               "additionalProperties": {
                    "type": "number"
               }
          },
          "rules": {
               "type": "object"
          }
     }
}
